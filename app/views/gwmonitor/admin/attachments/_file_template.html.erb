<tr>
  <% if item.is_image %>
    <td style="text-align: center;"><img src="<%= item.file_uri(@title.system_name) %>" style="<%= item.reduced_size(:width => 80, :height => 40, :output => :css) %>" alt= ''/></td>
  <% else %>
    <td><%= link_to '', item.file_uri(@title.system_name), :class => item.icon_type, :target => '_blank' %></td>
  <% end %>
  <td>
  <% if item.is_image %>
    <%= link_to "#{item.filename} (#{item.eng_unit})", item.file_uri(@title.system_name), :target => '_blank' %>
  <% else %>
    <%= link_to "#{item.filename} (#{item.eng_unit})", item.file_uri(@title.system_name) %>
  <% end %>
  </td>
  <td style="text-align: center;"><%= item.eng_unit %><br /><%= item.graphic_size_label %></td>
  <% if false %>
    <td style="text-align: center;">
      <% content = link_to "#{item.filename} (#{item.eng_unit})", item.file_uri(@title.system_name), :class => item.icon_type %>
      <%= link_to '添付', '#', :id => "link_attach#{item.id}", :onclick => "mceInsertContent('#{escape_javascript(content)}'); return false;" %>
    </td>
    <td style="text-align: center;">
    <% if item.is_image %>
      <%
        if item.width > 900
          rst = item.regulate_size(900)
          content = %Q(<img src="#{item.file_uri(@title.system_name)}" alt="#{item.filename}" height="#{rst[:height]}" width="#{rst[:width]}" />)
        else
          content = %Q(<img src="#{item.file_uri(@title.system_name)}" alt="#{item.filename}" />)
        end
      %>
      <a href="#" onclick="mceInsertContent('<%=escape_javascript(content) %>'); return false;">貼付</a>
    <% end %>
    </td>
  <% end %>
  <td style="width: 30px; text-align: center;">
    <%= link_to '削除', {:action => :destroy, :id => item, :system => @title.system_name, :title_id => item.title_id}, :confirm => '削除してよろしいですか？', :method => :delete %>
  </td>
</tr>
