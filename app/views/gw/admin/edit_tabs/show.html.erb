<div class="piece AdminSetting">
<%= render 'header_str' %>
<div class="pieceBody">
<%= render 'header_new_botton' %>
<%= render 'header_navi' %>

<div class="editingBox">
  <span class="btEdit">
  <%= link_to '編集', {action: :edit} %>
  </span>
  <span class="btDestroy">
  <%= link_to '削除', {action: :destroy}, confirm: "削除してよろしいですか？", method: :delete %>
  </span>
</div>

<table class="show">
  <tr>
    <th>公開</th>
    <td><%= @item.published_label %></td>
  </tr>
  <tr>
    <th>状態</th>
    <td><%= @item.state_label %></td>
  </tr>
  <tr>
    <th>表示名</th>
    <td><%=sanitize @item.name %></td>
  </tr>
  <tr>
    <th>並び順</th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>

<% if @item.level_no == 2 %>
<table class="show">
  <tr>
    <th>リンク種別</th>
    <td><%= @item.other_controller_use_label %></td>
  </tr>
  <% if @item.other_controller_use.to_i == 2 %>
    <tr>
      <th>タブキー</th>
      <td><%= @item.tab_keys %></td>
    </tr>
  <% elsif @item.other_controller_use.to_i == 1 %>
    <tr>
      <th>個別割当のURL</th>
      <td><%= @item.other_controller_url %></td>
    </tr>
  <% else %>
    <tr>
      <th>リンク先のURL</th>
      <td><%= @item.link_url -%></td>
    </tr>
    <tr>
      <th>接続先区分</th>
      <td><%= @item.class_external_label -%></td>
    </tr>
    <tr>
      <th>アカウント項目名</th>
      <td><%= @item.field_account -%></td>
    </tr>
    <tr>
      <th>パスワード項目名</th>
      <td><%= @item.field_pass -%></td>
    </tr>
  <% end %>
</table>
<% elsif @item.level_no > 3 %>
<table class="show">
  <tr>
    <th>リンク種別</th>
    <td><%= @item.class_sso_label -%></td>
  </tr>
  <tr>
    <th>リンク先URL</th>
    <td><%= @item.link_url -%></td>
  </tr>
  <tr>
    <th>接続先区分</th>
    <td><%= @item.class_external_label -%></td>
  </tr>
  <tr>
    <th>アカウント項目名</th>
    <td><%= @item.field_account -%></td>
  </tr>
  <tr>
    <th>パスワード項目名</th>
    <td><%= @item.field_pass -%></td>
  </tr>
</table>
<% end %>

<% if @parent.level_no >= 2 %>
<table class="show">
  <tr>
    <th>公開区分</th>
    <td><%= @item.is_public_label %></td>
  </tr>
  <% if @item.is_public == 1 %>
    <tr>
      <th>公開所属</th>
      <td><%=sanitize @item.public_group_names.join('<br />') %></td>
    </tr>
  <% elsif @item.is_public == 2 %>
    <tr>
      <th>関数</th>
      <td><%= @item.display_auth %></td>
    </tr>
  <% end %>
</table>
<% end %>

</div>
</div>
