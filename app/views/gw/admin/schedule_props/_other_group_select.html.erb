<%
javascript_fname = 'search_group_search_submit();'
grouplist = System::Group.enabled_group_options
%>
<%= form_tag '', :method => :get, :class => 'search', :name => 'search' do -%>
  <%= hidden_field_tag('s_genre', params[:s_genre]) unless params[:s_genre].blank? -%>
  <%= hidden_field_tag('s_date', params[:s_date]) unless params[:s_date].blank? -%>
  <%= hidden_field_tag('id', params[:id]) unless params[:id].blank? -%>
  <%= hidden_field_tag('cls', params[:cls]) unless params[:cls].blank? -%>
種別 <%= select_tag('type_id' , options_for_select([['すべて', '0']] + @prop_types.map{|type| [type.name, type.id]}, @type_id), :onchange=>javascript_fname ) -%>
施設の管理所属 <%= select_tag('s_other_admin_gid' , options_for_select([['すべて', '0']] +  grouplist, @s_other_admin_gid), :onchange=>javascript_fname ) -%>
<% end -%>
