<div class="piece soumuMessage">
<%= render 'header_str' %>

<div class="pieceBody">
<div class="editingBox">
  <span class="btEdit"><%= link_to '編集', {action: :edit} %></span>
  <span class="btDestroy"><%= link_to '削除', {action: :destroy}, method: :delete, confirm: '削除をすると元に戻せません。削除しますか' %></span>
  <span class=""><%= link_to '管理者設定へ >>', "/gw/admin_settings" %></span>
</div>

<table class="show">
  <tr>
    <th>表示</th>
    <td><%= @item.state_label %></td>
  </tr>
  <tr>
    <th>タブキー</th>
    <td><%= @item.tab_keys %></td>
  </tr>
  <tr>
    <th>表示順</th>
    <td><%= @item.sort_no %></td>
  </tr>
  <tr>
    <th>メッセージ</th>
    <td><%=sanitize @item.body %></td>
  </tr>
  <tr>
    <th>更新日</th>
    <td><%=l @item.updated_at if @item.updated_at %></td>
  </tr>
</table>

<!--戻るボタン-->
<div class="btReturn">
  <%= link_to 'メッセージ一覧へ戻る', {action: :index} %>
</div>

</div>
</div><!--piece admin_messages-->
