      </li>
    <% end %>
    <% if @role_questionnaire == true -%>
      <li>
      <span class="function"><%= link_to 'アンケート集計システムヘルプ設定' , "/questionnaire/help_configs/0/edit" %></span>
      <span class="explanation">アンケート集計システムのヘルプリンク先の設定を行います。</span>
      </li>
    <% end -%>
    </ul>
  <% end %>
<% end %>

