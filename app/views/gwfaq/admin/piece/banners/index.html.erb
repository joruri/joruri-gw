<% if params[:piece_param].blank? %>
  <div class="contentBanner"><%=sanitize @title.banner %></div>
<% else %>
  <div class="pieceBanner">
    <h3><%= @title.title %></h3>
    <%= render 'header_help' %>
    <% if @title.is_writable? %>
      <%= link_to "　　　　　　", new_gwfaq_doc_path(title_id: params[:title_id], parent_id: params[:parent_id]), class: "btNew" %>
    <% end %>
  </div>
<% end %>
