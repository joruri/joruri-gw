<table class="show bbsText">
  <tr>
    <th>記事件名<%= required('※') %> ( 記事件名は140文字以内で入力してください )</th>
  </tr>
  <tr>
    <td><%= f.text_area :title, :cols => '140', :rows=>"1", :style => 'width:100%; height:45px'%></td>
  </tr>
</table>
<%= render '/gwbbs/admin/docs/form_wiki_select', f: f %>

<table class="show bbsText" id="nomal_body_table" style="<%= 'display: none;' if @item.wiki_enabled? -%>">
  <tr>
    <th>本文</th>
  </tr>
  <tr>
    <td class="mceEditor"><%= f.text_area :body, :class => 'mceEditor', :rows => 20, :cols=>40, :style => 'height:500px; width:100%' %></td>
  </tr>
</table>
<%= render '/gwbbs/admin/docs/form_wiki', f: f, title: "本文" %>

<% if @title.use_old_upload_system? %>
  <%= gwboard_image_form(f, @item, 'item_body') %>
  <%= gwboard_attach_form(f, @item) %>
<% else %>
  <%= gwboard_attachments_form(f, @item) %>
<% end %>
