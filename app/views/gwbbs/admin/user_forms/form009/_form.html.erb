<%= f.hidden_field :wiki, :value => 0 %>
<table class="show bbsText">
  <tr>
    <th>システム名<%= required('※') %> ( システム名は140文字以内で入力してください )</th>
  </tr>
  <tr>
    <td><%= f.text_area :title, :cols => '140', :rows => "1", :style => 'width:100%; height:45px' %></td>
  </tr>
  <tr>
    <th>添付ファイル</th>
  </tr>
  <tr>
    <td class="mceEditor"><%= f.text_area :body, :class => 'mceEditor body ckeditor', :style => 'width:100%; height:200px' %></td>
  </tr>
</table>

<% if @title.use_old_upload_system? %>
  <%= gwboard_image_form(f, @item, 'item_body') %>
  <%= gwboard_attach_form(f, @item) %>
<% else %>
  <%= gwboard_attachments_form(f, @item) %>
<% end %>

<table class="show bbsText">
  <tr>
    <th>備考</th>
  </tr>
  <tr>
    <td><%= f.text_area :note, :cols => '140', :rows => "3", :style => 'width:100%; height:80px' %></td>
  </tr>
</table>
